@using Microsoft.AspNetCore.Identity
@using How_To.Areas.Identity.Data 

@inject SignInManager<HowToUser> SignInManager
@inject UserManager<HowToUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="login-box border-right-1">
                    <a asp-area="Identity" asp-page="/Account/Login">
                        <i class="fa fa-key"></i> Login
                    </a>
                </div>
                <div class="login-box border-left-1 border-right-1">
                    <a asp-area="Identity" asp-page="/Account/Register">
                        <i class="fa fa-pencil"></i> Sign Up
                    </a>
                </div>
            </div>
        </div>
    </div>
    
}
