@using Microsoft.AspNetCore.Identity
@using How_To.Areas.Identity.Data 

@inject SignInManager<HowToUser> SignInManager
@inject UserManager<HowToUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    HowToUser user = await UserManager.FindByEmailAsync(User.Identity.Name);
<form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
    
      
     
      
        
    
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="login-box border-right-1">
                    <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@user.LastName @user.FirstName </a>
                </div>
                <div class="login-box border-left-1 border-right-1">

                    <button type="submit" class="btn btn-link navbar-btn navbar-link">Logout</button>
                </div>
            </div>
        </div>
    </div>
</form>
}
else
{
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="login-box border-right-1">
                    <a asp-area="Identity" asp-page="/Account/Login">
                        <i class="fa fa-key"></i> Login
                    </a>
                </div>
                <div class="login-box border-left-1 border-right-1">
                    <a asp-area="Identity" asp-page="/Account/Register">
                        <i class="fa fa-pencil"></i> Sign Up
                    </a>
                </div>
            </div>
        </div>
    </div>
    
}
